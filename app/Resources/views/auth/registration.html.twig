<html>
{% include 'template_css_js' %}
<body>
<h3>Registration</h3>
<ul>
    {% for error in errors %}
        <li>{{ error.message }}</li>
    {% endfor %}
    {% if user_error is not empty %}
        <li>{{ user_error }}</li>
    {% endif %}
</ul>
<form role="form" method="post" action="/registry">
    <div class="col-sm-6">
        <div class="form-group">
            <label for="login">Enter your Login</label>
            <input type="text" class="form-control" id="login"  name = "login" value="{{ request.get('login') }}">
        </div>
        <div class="form-group">
            <label for="password">Enter your password</label>
            <input type="password" class="form-control" id="password"  name = "password" value="{{ request.get('password')  }}">
        </div>
        <div class="form-group">
            <label for="repeat">Repeat your pasword</label>
            <input type="password" class="form-control" id="repeat"  name = "repeat" value="{{ request.get('repeat') }}">
        </div>
        <input type="submit" class="btn btn-success" name="submit" value="Registry"/>
    </div>
</form>
</body>
</html>